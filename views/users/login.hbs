<section>
    <div class="wrapper-iniciarsesion">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 offset-lg-2 offset-xl-2">
                <form action="/users/login" method="post" class="formulario-iniciarsesion">
                    <div class="formulario-cabecera-iniciarsesion">
                        <div class="d-flex justify-content-between">
                            <div class="">
                                <span class="">Iniciar Sesión</span>
                            </div>
                            <div class="">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                        <p>Aquí puede iniciar la sesión</p>
                        {{#if registerCorrectly}}
                            <p style="color: green">Se ha registrado correctamente. Ya puede iniciar sesión.</p>
                        {{/if}}
                        {{#if usernameError}}
                            <p style="color: red">El usuario no existe. Inténtelo de nuevo.</p>
                        {{/if}}
                        {{#if passwordError}}
                            <p style="color: red">La contraseña no es correcta. Inténtelo de nuevo.</p>
                        {{/if}}
                        {{#if mailError}}
                            <p style="color: red">{{mailError}}</p>
                        {{/if}}
                        {{#if recoverCorrect}}
                            <p style="color: green">{{recoverCorrect}}</p>
                        {{/if}}
                        {{#if passwordChanged}}
                            <p style="color: green">{{passwordChanged}}</p>
                        {{/if}}
                    </div>
                    <div class="formulario-contenido-iniciarsesion">
                        <label for="usuario">Nombre de Usuario</label>
                        <input type="text" placeholder="Introduce tu nombre de usuario" name="usuario" required>

                        <label for="contrasenya">Contraseña</label>
                        <input type="password" placeholder="Introduce tu contraseña" name="password" required>
                        <div class="d-flex flex-column align-items-center">
                            <button type="submit" class="btn btn-success boton-iniciarsesion-login">Iniciar Sesion
                            </button>
                            <a data-toggle="modal" data-target="#recuperarContraseña" href="#" class="contrasenya-olvidada">¿Contraseña olvidada?</a>
                        </div>
                    </div>
                </form>
                <!-- Modal -->
                <div class="modal fade" id="recuperarContraseña" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Recuperar contraseña</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/email/recover" method="post">
                                    <label for="emailRecover">Introduce tu email:</label>
                                    <input name="emailRecover" class="form-control" type="email" required>
                                    <br>
                                    <div class="d-flex flex-row justify-content-between">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
                <div class="puede-iniciarsesion">
                    <span class="">Para registrarse:</span>
                    <div class="texto">
                    Al crear una cuenta en GeeksHubs Travels estará informado de todas nuestras ofertas.
                    </div>
                        <a href="/users/register"><button type="submit" class="btn btn-success boton-iniciarsesion-login">Registrarse
                        </button></a>
                </div>
            </div>
        </div>
    </div>
</section>